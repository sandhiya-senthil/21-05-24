n = int(input("Enter the number of numbers you want to input: "))
positive_count = 0
negative_count = 0
i = 0
while i < n:
    num = float(input(f"Enter number {i+1}: "))
    if num > 0:
        positive_count += 1
    elif num < 0:
        negative_count += 1
    i += 1
print(f"Number of positive numbers entered: {positive_count}")
print(f"Number of negative numbers entered: {negative_count}")
